/* pages/detail/detail.wxss */
.detail-container{
  padding: 30rpx;
  box-sizing: border-box;
}
.detail-info{
  display: flex;
}
.detail-info-right{
  width: 35%;
  margin-left: 20rpx;
}
.detail-info-right image{
  /* width:600rpx;
  height: 300rpx; */
  width: 100%;
  height: 350rpx;
}
.detail-info-star{
  display: flex;
  align-items: center;
}
.detail-title{
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  font-size: 36rpx;
}
.detail-info-star .starperson{
  font-size: 28rpx;
  color: #ccc;
  padding-left: 20rpx;

}
.detail-info-star{
  margin-bottom: 20rpx;
}
.detail-info-text{
  font-size: 28rpx;
  line-height: 40rpx;
  text-align: justify;
}
.detail-info-text text{
  display: block;
}
.detail-info-left{
  width: 65%;
}

/* 豆瓣标签 */

.douban-tag{
  margin-top: 40rpx;
}
.douban-tag .douban-tag-title{
  color: #b3b3b3;
  font-size: 30rpx;
  margin-bottom: 30rpx;
}
.douban-tag .douban-tags{
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.douban-tag .douban-tags text{
  background-color: #f5f5f5;
  padding: 10rpx 20rpx;
  border-radius: 40rpx;
  color: #666;
  font-size: 30rpx;
  margin-bottom: 20rpx;
  margin-right: 15rpx;
}

/* 豆瓣评价 */
.douban-comment{
  margin-top: 40rpx;
}
.douban-comment .douban-comment-title{
  color: #b3b3b3;
}

.show-comment-more{
  color: #42BD56;
  text-align: center;
  margin-top: 30rpx;
  font-size: 28rpx;
}