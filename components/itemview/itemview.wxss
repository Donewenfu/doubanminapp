/* components/itemview/itemview.wxss */
.douban-list-item {
  display: inline-block;
  /* margin-right: 20rpx; */
  text-align: center;
  width: 200rpx;
}

.douban-list-item .douban-img {
  width: 200rpx;
  height: 300rpx;
  border-radius: 10rpx;
}

.douban-list-item .douban-img .listimage {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  border: 1px solid #f5f5f5;
}

.douban-list-name {
  text-align: center;
  font-size: 25rpx;
  font-weight: bold;
  display: block;
  margin-top: 20rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}