/* components/indexmodule/indexmodule.wxss */
.douban-group {
  padding: 35rpx;
}

.douban-heade-title {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
}

.showmore {
  color: #42bd56;
  font-size: 28rpx;
}

.douban-title-left {
  color: #494949;
  font-weight: bold;
}

.douban-body-list {
  margin-top: 20rpx;
}

.douban-list-item {
  display: inline-block;
  margin-right: 20rpx;
  text-align: center;
  width: 200rpx;
}

.douban-list-item .douban-img {
  width: 200rpx;
  height: 300rpx;
  border-radius: 10rpx;
}

.douban-list-item .douban-img .listimage {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  border: 1px solid #f5f5f5;
}

.douban-list-name {
  text-align: center;
  font-size: 25rpx;
  font-weight: bold;
  display: block;
  margin-top: 20rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.douban-list-scroll {
  width: 100%;
  white-space: nowrap;
  height: 400rpx;
}

.douban-list-scroll .douban-list-item:last-child {
  margin-right: 0rpx;
}

