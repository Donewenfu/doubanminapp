/* components/comments/comments.wxss */
.douban-comment-list{
  display: flex;
  margin-top: 30rpx;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.douban-comment-list .douban-comment-avatar{
  width: 80rpx;
  height: 80rpx;
  margin-right: 10rpx;
}

.douban-comment-list .douban-comment-avatar image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.douban-comment-name{
  display: flex;
  font-size: 28rpx;
  align-items: center;
}
.douban-comment-info{
  width: 85%;
}
.douban-comment-name text{
  margin-right: 10rpx;
}
.douban-comment-date{
  font-size: 25rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  color: #b3b3b3;
}
.douban-comment-text{
  font-size: 26rpx;
  color: #333;
  text-align: justify;
}