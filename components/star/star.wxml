<view class='star-group commentstar'>
  <image style="width:{{starsize}}rpx;height:{{starsize}}rpx;" class="star-image" wx:for='{{lights}}' wx:key='index' src="../../images/rate_light.png"></image>
  <image style="width:{{starsize}}rpx;height:{{starsize}}rpx;" class="star-image" wx:for='{{halfs}}' wx:key='index' src="../../images/rate_half.png"></image>
  <image style="width:{{starsize}}rpx;height:{{starsize}}rpx;" class="star-image" wx:for='{{garys}}' wx:key='index' src="../../images/rate_gray.png"></image>
  <text class="star-text" style="font-size:{{fontsize}}rpx;" wx:if='{{ishowtext}}'>{{startext}}</text>
</view>
